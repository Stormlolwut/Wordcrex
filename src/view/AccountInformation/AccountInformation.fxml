<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AccountInformation.AccountInformation">
    <stylesheets>
        <URL value="@../css/Main.css" />
    </stylesheets>

    <Button id="btBack" alignment="TOP_LEFT" onMouseClicked="#backMain" text="←" GridPane.halignment="LEFT" GridPane.rowIndex="0" GridPane.valignment="TOP">
        <padding>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
        </padding>
    </Button>
    <Label id="username" fx:id="username" text="Username" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="25" right="25" top="30" />
        </GridPane.margin>
    </Label>
    <Label id="role" fx:id="role" text="Role" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="25" right="25" top="30" />
        </GridPane.margin>
    </Label>
    <TextField fx:id="password" focusTraversable="false" maxWidth="400" promptText="Wachtwoord" GridPane.halignment="CENTER" GridPane.rowIndex="3">
        <GridPane.margin>
            <Insets left="25" right="25" top="30" />
        </GridPane.margin>
    </TextField>
    <TextField fx:id="confirmationPassword" focusTraversable="false" maxWidth="400" promptText="Herhaal wachtwoord" GridPane.halignment="CENTER" GridPane.rowIndex="4">
        <GridPane.margin>
            <Insets left="25" right="25" top="30" />
        </GridPane.margin>
    </TextField>
    <Button onMouseClicked="#changePassword" text="Wijzig" GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <GridPane.margin>
            <Insets left="25" right="25" top="30" />
        </GridPane.margin>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <padding>
         <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
      </padding>
    </Button>
    <Label fx:id="error" text="Error" textAlignment="CENTER" visible="false" GridPane.halignment="CENTER" GridPane.rowIndex="6">
        <GridPane.margin>
            <Insets left="25" right="25" top="30" />
        </GridPane.margin>
    </Label>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints prefHeight="200" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
